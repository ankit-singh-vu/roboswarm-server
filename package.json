{
  "name": "robo-swarm",
  "version": "1.0.0",
  "description": "RoboSwarm.us API and Workers",
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/vital101/kernl-analytics"
  },
  "author": "Jack Slingerland",
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-ts && npm run tslint",
    "deploy": "git pull && NODE_ENV=development npm install && npm run build && npm run migrate && /usr/bin/pm2 gracefulReload all",
    "serve": "node dist/server.js",
    "worker": "node dist/workers/provisionWorker.js",
    "watch-node": "nodemon dist/server.js",
    "watch": "PORT=3001 concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "jest --forceExit",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "migrate": "knex migrate:latest",
    "make-migration": "knex migrate:make",
    "rollback": "knex migrate:rollback"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/test/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "@types/cors": "^2.8.3",
    "bcrypt": "^2.0.0",
    "body-parser": "^1.18.2",
    "cors": "^2.8.4",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "express-jwt": "^5.3.1",
    "jsonwebtoken": "^8.2.1",
    "knex": "^0.14.4",
    "multer": "^1.3.0",
    "node-ssh": "^5.1.1",
    "pg": "^7.4.1",
    "redis": "^2.8.0",
    "request": "^2.85.0",
    "request-promise": "^4.2.2",
    "shelljs": "^0.8.1",
    "ssh2": "^0.6.1",
    "ssh2-sftp-client": "^3.1.0",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^1.0.0",
    "@types/body-parser": "^1.16.8",
    "@types/dotenv": "^4.0.2",
    "@types/express": "^4.11.1",
    "@types/express-jwt": "0.0.40",
    "@types/express-session": "^1.15.8",
    "@types/jsonwebtoken": "^7.2.6",
    "@types/knex": "0.14.9",
    "@types/multer": "^1.3.6",
    "@types/node": "^9.6.0",
    "@types/pg": "^7.4.5",
    "@types/redis": "^2.8.7",
    "@types/request": "^2.47.0",
    "@types/request-promise": "^4.1.41",
    "@types/shelljs": "^0.7.9",
    "@types/supertest": "^2.0.4",
    "@types/uuid": "^3.4.3",
    "concurrently": "^3.5.1",
    "gulp": "^3.9.1",
    "gulp-ssh": "^0.7.0",
    "nodemon": "^1.17.2",
    "supertest": "^3.0.0",
    "tslint": "^5.9.1",
    "typescript": "^2.7.2"
  }
}
