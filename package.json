{
  "name": "robo-swarm",
  "version": "1.4.0",
  "description": "RoboSwarm.us API and Workers",
  "private": true,
  "engines": {
    "node": ">=18.14.2 <19.0.0",
    "npm": ">=9.5.0"
  },
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/roboswarm/roboswarm-server"
  },
  "author": "Jack Slingerland",
  "scripts": {
    "start": "TZ=utc npm run serve",
    "debug": "TZ=utc npm run build-ts && TZ=utc PORT=3002 node --inspect-brk dist/server.js ",
    "build": "TZ=utc npm run build-ts",
    "deploy": "TZ=utc npm test && npm run build && TZ=utc pm2 deploy production update",
    "serve": "TZ=utc node dist/server.js",
    "worker": "TZ=utc node dist/workers/provisionWorker.js",
    "watch-node": "TZ=utc nodemon dist/server.js",
    "watch": "TZ=utc PORT=3002 concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "TZ=utc jest --verbose --forceExit --silent",
    "coverage": "TZ=utc jest --collectCoverage --forceExit",
    "build-ts": "TZ=utc tsc",
    "watch-ts": "TZ=utc tsc -w",
    "one-off": "TZ=utc node dist/workers/one-off-worker.js",
    "migrate": "TZ=utc knex migrate:latest",
    "make-migration": "TZ=utc knex migrate:make",
    "rollback": "TZ=utc knex migrate:rollback",
    "check-user-delinquency": "TZ=utc node dist/cron/check_user_delinquency.js",
    "swarm-cleanup": "TZ=utc node dist/cron/swarm_cleanup.js",
    "pm2": "pm2"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json",
        "diagnostics": true
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/test/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "@sendgrid/mail": "^7.7.0",
    "@sentry/node": "^7.20.0",
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.2",
    "@types/cheerio": "^0.22.31",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/express-jwt": "^7.4.2",
    "@types/express-session": "^1.17.5",
    "@types/jest": "^29.2.3",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/morgan": "^1.9.3",
    "@types/multer": "^1.4.7",
    "@types/node-cron": "^3.0.6",
    "@types/pg": "^8.6.5",
    "@types/redis": "^4.0.11",
    "@types/request": "^2.48.8",
    "@types/request-promise": "^4.1.48",
    "@types/shelljs": "^0.8.11",
    "@types/sinon": "^10.0.13",
    "@types/ssh2": "^1.11.6",
    "@types/supertest": "^2.0.12",
    "@types/swig": "^0.0.30",
    "@types/uuid": "^8.3.4",
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.1",
    "cheerio": "^1.0.0-rc.12",
    "concurrently": "^7.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-jwt": "^7.7.7",
    "handlebars": "^4.7.7",
    "install": "^0.13.0",
    "jest": "^29.3.1",
    "jsonwebtoken": "^8.5.1",
    "knex": "^2.3.0",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.2",
    "nodemon": "^2.0.20",
    "pg": "^8.8.0",
    "pg-query-stream": "^4.2.4",
    "pm2": "^5.2.2",
    "pug": "^3.0.2",
    "redis": "^4.5.0",
    "request": "^2.88.2",
    "request-promise": "^4.2.6",
    "simple-encryptor": "^4.0.0",
    "sinon": "^14.0.2",
    "sitemapper": "^3.2.6",
    "stripe": "^11.1.0",
    "supertest": "^6.3.1",
    "swig": "github:vital101/swig",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.3",
    "uuid": "^9.0.0"
  }
}
