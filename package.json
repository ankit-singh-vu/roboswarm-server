{
  "name": "robo-swarm",
  "version": "1.0.0",
  "description": "RoboSwarm.us API and Workers",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/roboswarm/roboswarm-server"
  },
  "author": "Jack Slingerland",
  "scripts": {
    "start": "TZ=utc npm run serve",
    "debug": "TZ=utc npm run build-ts && TZ=utc PORT=3002 node --inspect-brk dist/server.js ",
    "build": "TZ=utc npm run build-ts && npm run lint",
    "deploy": "TZ=utc npm test && npm run build && TZ=utc pm2 deploy production update",
    "serve": "TZ=utc node dist/server.js",
    "worker": "TZ=utc node dist/workers/provisionWorker.js",
    "watch-node": "TZ=utc nodemon dist/server.js",
    "watch": "TZ=utc PORT=3002 concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "TZ=utc jest --verbose --forceExit --silent",
    "coverage": "TZ=utc jest --collectCoverage --forceExit",
    "build-ts": "TZ=utc tsc",
    "watch-ts": "TZ=utc tsc -w",
    "lint": "TZ=utc eslint -c .eslintrc.js src/** --ext .ts",
    "migrate": "TZ=utc knex migrate:latest",
    "make-migration": "TZ=utc knex migrate:make",
    "rollback": "TZ=utc knex migrate:rollback",
    "check-user-delinquency": "TZ=utc node dist/cron/check_user_delinquency.js",
    "swarm-cleanup": "TZ=utc node dist/cron/swarm_cleanup.js"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json",
        "diagnostics": true
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/test/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "@sendgrid/mail": "^7.4.0",
    "@sentry/node": "^5.29.2",
    "@types/cheerio": "^0.22.23",
    "@types/cors": "^2.8.9",
    "@types/stripe": "^8.0.417",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "cheerio": "^1.0.0-rc.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-jwt": "^6.0.0",
    "install": "^0.13.0",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.21.15",
    "moment": "^2.29.1",
    "multer": "^1.4.2",
    "node-ssh": "^11.1.1",
    "pg": "^8.5.1",
    "pm2": "^4.5.1",
    "pug": "^3.0.0",
    "redis": "^3.0.2",
    "request": "github:vital101/request",
    "request-promise": "^4.2.6",
    "simple-encryptor": "^4.0.0",
    "sitemapper": "^3.1.10",
    "ssh2-sftp-client": "^6.0.1",
    "stripe": "^8.129.0",
    "swig": "^1.4.2",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.9",
    "@types/express-jwt": "^6.0.0",
    "@types/express-session": "^1.17.3",
    "@types/jest": "^26.0.19",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/multer": "^1.4.5",
    "@types/node": "^14.14.19",
    "@types/pg": "^7.14.7",
    "@types/redis": "^2.8.28",
    "@types/request": "^2.48.5",
    "@types/request-promise": "^4.1.47",
    "@types/shelljs": "^0.8.8",
    "@types/sinon": "^9.0.10",
    "@types/ssh2": "^0.5.46",
    "@types/supertest": "^2.0.10",
    "@types/swig": "0.0.29",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/eslint-plugin-tslint": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "concurrently": "^5.3.0",
    "eslint": "^7.16.0",
    "eslint-plugin-jsdoc": "^30.7.9",
    "gulp": "^4.0.2",
    "gulp-ssh": "^0.7.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.6",
    "sinon": "^9.2.2",
    "supertest": "^6.0.1",
    "ts-jest": "^26.4.4",
    "tslint": "^6.1.3",
    "typescript": "^4.1.3"
  }
}
