{
  "name": "robo-swarm",
  "version": "1.4.0",
  "description": "RoboSwarm.us API and Workers",
  "private": true,
  "engines": {
    "node": ">=20.5.1 <21.0.0",
    "npm": ">=9.8.0"
  },
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/roboswarm/roboswarm-server"
  },
  "author": "Jack Slingerland",
  "scripts": {
    "start": "TZ=utc npm run serve",
    "debug": "TZ=utc npm run build-ts && TZ=utc PORT=3002 node --inspect-brk dist/server.js ",
    "build": "TZ=utc npm run build-ts",
    "deploy": "TZ=utc npm test && npm run build && TZ=utc pm2 deploy production update",
    "serve": "TZ=utc node dist/server.js",
    "worker": "TZ=utc node dist/workers/provisionWorker.js",
    "watch-node": "TZ=utc nodemon dist/server.js",
    "watch": "TZ=utc PORT=3002 concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "TZ=utc jest --verbose --forceExit --silent",
    "coverage": "TZ=utc jest --collectCoverage --forceExit",
    "build-ts": "TZ=utc tsc",
    "watch-ts": "TZ=utc tsc -w",
    "one-off": "TZ=utc node dist/workers/one-off-worker.js",
    "migrate": "TZ=utc knex migrate:latest",
    "make-migration": "TZ=utc knex migrate:make",
    "rollback": "TZ=utc knex migrate:rollback",
    "check-user-delinquency": "TZ=utc node dist/cron/check_user_delinquency.js",
    "swarm-cleanup": "TZ=utc node dist/cron/swarm_cleanup.js",
    "pm2": "pm2"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json",
        "diagnostics": true
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/test/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "@sendgrid/mail": "^7.7.0",
    "@sentry/node": "^7.64.0",
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.2",
    "@types/cheerio": "^0.22.31",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.17.7",
    "@types/jest": "^29.5.4",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.5",
    "@types/multer": "^1.4.7",
    "@types/node": "20.5.6",
    "@types/node-cron": "^3.0.8",
    "@types/pg": "^8.10.2",
    "@types/shelljs": "^0.8.12",
    "@types/sinon": "^10.0.16",
    "@types/ssh2": "^1.11.13",
    "@types/supertest": "^2.0.12",
    "@types/swig": "^0.0.31",
    "@types/uuid": "^9.0.2",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "cheerio": "^1.0.0-rc.12",
    "concurrently": "^8.2.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-jwt": "^8.4.1",
    "handlebars": "^4.7.8",
    "install": "^0.13.0",
    "jest": "^29.6.4",
    "jsonwebtoken": "^9.0.1",
    "knex": "^2.5.1",
    "moment": "2.29.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemon": "^3.0.1",
    "pg": "^8.11.3",
    "pg-query-stream": "^4.5.3",
    "pm2": "^5.3.0",
    "pug": "^3.0.2",
    "redis": "^4.6.8",
    "simple-encryptor": "^4.0.0",
    "sinon": "^15.2.0",
    "sitemapper": "^3.2.6",
    "stripe": "^13.3.0",
    "supertest": "^6.3.3",
    "swig": "github:vital101/swig",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "uuid": "^9.0.0"
  }
}
