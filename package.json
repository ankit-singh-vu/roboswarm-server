{
  "name": "robo-swarm",
  "version": "1.0.0",
  "description": "RoboSwarm.us API and Workers",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/roboswarm/roboswarm-server"
  },
  "author": "Jack Slingerland",
  "scripts": {
    "start": "TZ=utc npm run serve",
    "build": "TZ=utc npm run build-ts && npm run tslint",
    "deploy": "TZ=utc pm2 deploy production update",
    "serve": "TZ=utc node dist/server.js",
    "worker": "TZ=utc node dist/workers/provisionWorker.js",
    "watch-node": "TZ=utc nodemon dist/server.js",
    "watch": "TZ=utc PORT=3002 concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "TZ=utc jest --forceExit",
    "build-ts": "TZ=utc tsc",
    "watch-ts": "TZ=utc tsc -w",
    "tslint": "TZ=utc tslint -c tslint.json -p tsconfig.json",
    "migrate": "TZ=utc knex migrate:latest",
    "make-migration": "TZ=utc knex migrate:make",
    "rollback": "TZ=utc knex migrate:rollback",
    "check-user-delinquency": "TZ=utc node dist/cron/check_user_delinquency.js",
    "swarm-cleanup": "TZ=utc node dist/cron/swarm_cleanup.js"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/test/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "@sendgrid/mail": "^6.3.1",
    "@types/cors": "^2.8.4",
    "@types/stripe": "^6.25.1",
    "bcrypt": "^3.0.4",
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "express-jwt": "^5.3.1",
    "jsonwebtoken": "^8.5.0",
    "knex": "^0.16.3",
    "moment": "^2.24.0",
    "multer": "^1.4.1",
    "node-ssh": "^5.1.2",
    "pg": "^7.8.2",
    "pm2": "^3.5.1",
    "pug": "^2.0.3",
    "redis": "^2.8.0",
    "request": "^2.88.0",
    "request-promise": "^4.2.4",
    "shelljs": "^0.8.3",
    "ssh2": "^0.8.2",
    "ssh2-sftp-client": "^3.1.0",
    "stripe": "^6.26.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/body-parser": "^1.17.0",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.16.1",
    "@types/express-jwt": "0.0.41",
    "@types/express-session": "^1.15.12",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/knex": "0.15.2",
    "@types/multer": "^1.3.7",
    "@types/node": "^11.11.0",
    "@types/pg": "^7.4.13",
    "@types/redis": "^2.8.10",
    "@types/request": "^2.48.1",
    "@types/request-promise": "^4.1.42",
    "@types/shelljs": "^0.8.3",
    "@types/supertest": "^2.0.7",
    "@types/uuid": "^3.4.4",
    "concurrently": "^4.1.0",
    "gulp": "^4.0.0",
    "gulp-ssh": "^0.7.0",
    "nodemon": "^1.18.10",
    "supertest": "^4.0.0",
    "tslint": "^5.18.0",
    "typescript": "^3.3.3333"
  }
}
