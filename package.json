{
  "name": "robo-swarm",
  "version": "1.3.0",
  "description": "RoboSwarm.us API and Workers",
  "private": true,
  "engines": {
    "node": ">=16.13.1 <17.0.0",
    "npm": ">=8.1.2"
  },
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/roboswarm/roboswarm-server"
  },
  "author": "Jack Slingerland",
  "scripts": {
    "start": "TZ=utc npm run serve",
    "debug": "TZ=utc npm run build-ts && TZ=utc PORT=3002 node --inspect-brk dist/server.js ",
    "build": "TZ=utc npm run build-ts && npm run lint",
    "deploy": "TZ=utc npm test && npm run build && TZ=utc pm2 deploy production update",
    "serve": "TZ=utc node dist/server.js",
    "worker": "TZ=utc node dist/workers/provisionWorker.js",
    "watch-node": "TZ=utc nodemon dist/server.js",
    "watch": "TZ=utc PORT=3002 concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "TZ=utc jest --verbose --forceExit --silent",
    "coverage": "TZ=utc jest --collectCoverage --forceExit",
    "build-ts": "TZ=utc tsc",
    "watch-ts": "TZ=utc tsc -w",
    "lint": "TZ=utc eslint -c .eslintrc.js src/** --ext .ts",
    "migrate": "TZ=utc knex migrate:latest",
    "make-migration": "TZ=utc knex migrate:make",
    "rollback": "TZ=utc knex migrate:rollback",
    "check-user-delinquency": "TZ=utc node dist/cron/check_user_delinquency.js",
    "swarm-cleanup": "TZ=utc node dist/cron/swarm_cleanup.js"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json",
        "diagnostics": true
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/test/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "@sendgrid/mail": "^7.4.6",
    "@sentry/node": "^6.11.0",
    "@types/cheerio": "^0.22.30",
    "@types/cors": "^2.8.12",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "cheerio": "^1.0.0-rc.10",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-jwt": "^6.1.0",
    "handlebars": "^4.7.7",
    "install": "^0.13.0",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.21.21",
    "moment": "^2.29.1",
    "multer": "^1.4.3",
    "node-ssh": "^12.0.0",
    "pg": "^8.7.1",
    "pm2": "^5.1.0",
    "pug": "^3.0.2",
    "redis": "^3.1.2",
    "request": "^2.88.2",
    "request-promise": "^4.2.6",
    "simple-encryptor": "^4.0.0",
    "sitemapper": "^3.1.15",
    "ssh2-sftp-client": "^7.0.3",
    "stripe": "^8.169.0",
    "swig": "^1.4.2",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.1",
    "@types/express": "^4.17.13",
    "@types/express-jwt": "^6.0.2",
    "@types/express-session": "^1.17.4",
    "@types/jest": "^27.0.1",
    "@types/jsonwebtoken": "^8.5.4",
    "@types/multer": "^1.4.7",
    "@types/node": "^16.6.2",
    "@types/pg": "^8.6.1",
    "@types/redis": "^2.8.31",
    "@types/request": "^2.48.7",
    "@types/request-promise": "^4.1.48",
    "@types/shelljs": "^0.8.9",
    "@types/sinon": "^10.0.2",
    "@types/ssh2": "^0.5.47",
    "@types/supertest": "^2.0.11",
    "@types/swig": "0.0.30",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/eslint-plugin-tslint": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "concurrently": "^6.2.1",
    "eslint": "^7.32.0",
    "eslint-plugin-jsdoc": "^36.0.7",
    "jest": "^27.0.6",
    "nodemon": "^2.0.12",
    "sinon": "^11.1.2",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.5",
    "tslint": "^6.1.3",
    "typescript": "^4.3.5"
  }
}
