{
  "name": "robo-swarm",
  "version": "1.0.0",
  "description": "RoboSwarm.us API and Workers",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/roboswarm/roboswarm-server"
  },
  "author": "Jack Slingerland",
  "scripts": {
    "start": "TZ=utc npm run serve",
    "build": "TZ=utc npm run build-ts && npm run lint",
    "deploy": "TZ=utc npm test && npm run build && TZ=utc pm2 deploy production update",
    "serve": "TZ=utc node dist/server.js",
    "worker": "TZ=utc node dist/workers/provisionWorker.js",
    "watch-node": "TZ=utc nodemon dist/server.js",
    "watch": "TZ=utc PORT=3002 concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "TZ=utc jest --verbose --forceExit --silent",
    "coverage": "TZ=utc jest --collectCoverage --forceExit",
    "build-ts": "TZ=utc tsc",
    "watch-ts": "TZ=utc tsc -w",
    "lint": "TZ=utc eslint -c .eslintrc.js src/** --ext .ts",
    "migrate": "TZ=utc knex migrate:latest",
    "make-migration": "TZ=utc knex migrate:make",
    "rollback": "TZ=utc knex migrate:rollback",
    "check-user-delinquency": "TZ=utc node dist/cron/check_user_delinquency.js",
    "swarm-cleanup": "TZ=utc node dist/cron/swarm_cleanup.js"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json",
        "diagnostics": true
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/test/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "@sendgrid/mail": "^7.2.1",
    "@sentry/node": "^5.20.1",
    "@types/cheerio": "^0.22.21",
    "@types/cors": "^2.8.6",
    "@types/stripe": "^7.13.24",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "cheerio": "^1.0.0-rc.3",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-jwt": "^5.3.3",
    "install": "^0.13.0",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.21.12",
    "moment": "^2.27.0",
    "multer": "^1.4.2",
    "node-ssh": "^5.1.2",
    "pg": "^8.4.2",
    "pm2": "^4.4.0",
    "pug": "^3.0.0",
    "redis": "^3.0.2",
    "request": "github:vital101/request",
    "request-promise": "^4.2.5",
    "simple-encryptor": "^4.0.0",
    "sitemapper": "^3.0.5",
    "ssh2": "^0.8.9",
    "ssh2-sftp-client": "^5.1.2",
    "stripe": "^8.67.0",
    "swig": "^1.4.2",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.6",
    "@types/express-jwt": "0.0.42",
    "@types/express-session": "^1.15.16",
    "@types/jest": "^26.0.3",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/multer": "^1.4.3",
    "@types/node": "^14.0.14",
    "@types/pg": "^7.14.6",
    "@types/redis": "^2.8.22",
    "@types/request": "^2.48.5",
    "@types/request-promise": "^4.1.45",
    "@types/shelljs": "^0.8.8",
    "@types/sinon": "^9.0.4",
    "@types/supertest": "^2.0.9",
    "@types/swig": "0.0.29",
    "@types/uuid": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/eslint-plugin-tslint": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "concurrently": "^5.2.0",
    "eslint": "^7.12.1",
    "eslint-plugin-jsdoc": "^30.7.7",
    "gulp": "^4.0.2",
    "gulp-ssh": "^0.7.0",
    "jest": "^26.1.0",
    "nodemon": "^2.0.4",
    "sinon": "^9.0.2",
    "supertest": "^4.0.2",
    "ts-jest": "^26.4.3",
    "tslint": "^6.1.3",
    "typescript": "^4.0.5"
  }
}
