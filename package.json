{
  "name": "robo-swarm",
  "version": "1.0.0",
  "description": "RoboSwarm.us API and Workers",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/roboswarm/roboswarm-server"
  },
  "author": "Jack Slingerland",
  "scripts": {
    "start": "TZ=utc npm run serve",
    "build": "TZ=utc npm run build-ts && npm run tslint",
    "deploy": "TZ=utc pm2 deploy production update",
    "serve": "TZ=utc node dist/server.js",
    "worker": "TZ=utc node dist/workers/provisionWorker.js",
    "watch-node": "TZ=utc nodemon dist/server.js",
    "watch": "TZ=utc PORT=3002 concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "TZ=utc jest --detectOpenHandles",
    "build-ts": "TZ=utc tsc",
    "watch-ts": "TZ=utc tsc -w",
    "tslint": "TZ=utc tslint -c tslint.json -p tsconfig.json",
    "migrate": "TZ=utc knex migrate:latest",
    "make-migration": "TZ=utc knex migrate:make",
    "rollback": "TZ=utc knex migrate:rollback",
    "check-user-delinquency": "TZ=utc node dist/cron/check_user_delinquency.js",
    "swarm-cleanup": "TZ=utc node dist/cron/swarm_cleanup.js"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json",
        "diagnostics": true
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/test/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "@sendgrid/mail": "^6.4.0",
    "@types/cors": "^2.8.6",
    "@types/stripe": "^7.13.7",
    "bcrypt": "^3.0.7",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-jwt": "^5.3.1",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.20.2",
    "moment": "^2.24.0",
    "multer": "^1.4.2",
    "node-ssh": "^5.1.2",
    "pg": "^7.14.0",
    "pm2": "^4.1.2",
    "pug": "^2.0.4",
    "redis": "^2.8.0",
    "request": "^2.88.0",
    "request-promise": "^4.2.5",
    "shelljs": "^0.8.3",
    "ssh2": "^0.8.6",
    "ssh2-sftp-client": "^4.2.3",
    "stripe": "^7.13.0",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/body-parser": "^1.17.1",
    "@types/express": "^4.17.2",
    "@types/express-jwt": "0.0.42",
    "@types/express-session": "^1.15.16",
    "@types/jest": "^24.0.23",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/multer": "^1.3.10",
    "@types/node": "^12.12.11",
    "@types/pg": "^7.11.2",
    "@types/redis": "^2.8.14",
    "@types/request": "^2.48.3",
    "@types/request-promise": "^4.1.45",
    "@types/shelljs": "^0.8.6",
    "@types/sinon": "^7.5.1",
    "@types/supertest": "^2.0.8",
    "@types/uuid": "^3.4.6",
    "concurrently": "^5.0.0",
    "gulp": "^4.0.2",
    "gulp-ssh": "^0.7.0",
    "jest": "^24.9.0",
    "nodemon": "^2.0.0",
    "sinon": "^7.5.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.2.0",
    "tslint": "^5.20.1",
    "typescript": "^3.7.2"
  }
}
