{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "noImplicitAny": true,
        "moduleResolution": "nodenext",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "types": ["jest", "node"],
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/**/*",
        // "test/**/*"
    ]
}